<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="13dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/carme"
        android:text="@string/filtres"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkTous"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/dialogTitle"
        android:layout_marginTop="16dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/carme"
        android:text="@string/txt_tous"
        app:buttonTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/guideline110"
        app:layout_constraintEnd_toStartOf="@+id/guideline114"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="@+id/guideline107"
        app:layout_constraintTop_toTopOf="@+id/guideline29" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkEssence"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/checkTous"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/carme"
        android:text="@string/txt_station_essence"
        android:textSize="16sp"
        app:buttonTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/guideline111"
        app:layout_constraintEnd_toStartOf="@+id/guideline11"
        app:layout_constraintStart_toStartOf="@+id/guideline107"
        app:layout_constraintTop_toBottomOf="@+id/checkTous" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkSupermache"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/checkRestaurant"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/carme"
        android:text="@string/txt_supermarket"
        android:textSize="16sp"
        app:buttonTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/guideline112"
        app:layout_constraintEnd_toStartOf="@+id/guideline11"
        app:layout_constraintStart_toStartOf="@+id/guideline107"
        app:layout_constraintTop_toBottomOf="@+id/checkEssence" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkPharmacie"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/dialogTitle"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/carme"
        android:text="@string/txt_pharmacie"
        app:buttonTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/guideline110"
        app:layout_constraintEnd_toStartOf="@+id/guideline108"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toTopOf="@+id/guideline29" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkMagasin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/checkSupermache"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/carme"
        android:text="@string/txt_magasin"
        android:textSize="16sp"
        app:buttonTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/guideline111"
        app:layout_constraintEnd_toStartOf="@+id/guideline108"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toBottomOf="@+id/checkPharmacie" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkCinema"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/checkMagasin"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/carme"
        android:text="@string/txt_cinema"
        android:textSize="16sp"
        app:buttonTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/guideline112"
        app:layout_constraintEnd_toStartOf="@+id/guideline108"
        app:layout_constraintStart_toStartOf="@+id/checkPharmacie"
        app:layout_constraintTop_toBottomOf="@+id/checkMagasin" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkParc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/checkSupermache"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/carme"
        android:text="@string/txt_parc"
        android:textSize="16sp"
        app:buttonTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/guideline113"
        app:layout_constraintEnd_toStartOf="@+id/guideline11"
        app:layout_constraintStart_toStartOf="@+id/guideline107"
        app:layout_constraintTop_toBottomOf="@+id/checkSupermache" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkBoulangerie"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/checkCinema"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/carme"
        android:text="@string/txt_bakery"
        android:textSize="16sp"
        app:buttonTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/guideline113"
        app:layout_constraintEnd_toStartOf="@+id/guideline108"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toBottomOf="@+id/checkCinema" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkMusee"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/checkParc"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/carme"
        android:text="@string/txt_musee"
        android:textSize="16sp"
        app:buttonTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline11"
        app:layout_constraintStart_toStartOf="@+id/guideline107"
        app:layout_constraintTop_toBottomOf="@+id/checkParc" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkRestaurant"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/checkBoulangerie"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/carme"
        android:text="@string/txt_restaurant"
        android:textSize="16sp"
        app:buttonTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline108"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toBottomOf="@+id/checkBoulangerie" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/guideline29"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline12">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnValider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#93EA73"
            android:contentDescription="@string/txt_bouton_de_validation"
            app:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toTopOf="parent"
            app:maxImageSize="30dp"
            app:srcCompat="@drawable/ic_valider"
            app:tint="#0F4A0B" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnAnnuler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:backgroundTint="#DC2F2F"
            android:contentDescription="@string/txt_bouton_d_annulation"
            app:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toTopOf="parent"
            app:maxImageSize="30dp"
            app:srcCompat="@drawable/close24px"
            app:tint="@color/white" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.53" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline107"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline108"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline110"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline112"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline113"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline114"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>